<p id="notice"><%= notice %></p>

<table>
	<tr>
		<td rowspan="3" colspan="2" align="center">
			<%= image_tag("person.png", :size => "100x100") %>
		</td>
		<td colspan="2"><%= @person.name %></td>
	</tr><tr>
		<td colspan="2"><%= @person.surname %></td>
	</tr><tr>
		<td colspan="2"><%= @person.birthday %></td>
	</tr><tr>
		<td colspan="2" style="text-align:center"><%= @person.nick %></td>
	</tr><tr>
		<td colspan="2" style="text-align:center"><%= @person.coach_id>0 ? "Entrenador" : "" %></td>
	</tr><tr>
		<td style="text-align:center"><%= @person.player_id>0 ? "Jugador" : "" %></td>
	</tr>
</table>

<%= link_to 'Editar', edit_person_path(@person) %> |
