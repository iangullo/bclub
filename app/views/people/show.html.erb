<%= render "shared/modal" do %>
	<table>
		<tr>
			<td rowspan="3" align="center">
				<%= image_tag("person.svg", size: "100x100") %>
			</td>
			<td><%= @person.name %></td>
		</tr><tr>
			<td><%= @person.surname %></td>
		</tr><tr>
			<td><%= @person.birthday %></td>
		</tr><tr>
			<td style="text-align:center"><%= @person.dni %></td>
			<td class="inline-flex">
				<%= image_tag("player.svg", size: "30x30") if @person.player_id > 0 %>
				<%= image_tag("coach.svg", size: "30x30") if @person.coach_id > 0 %>
			</td>
			<td align="right">
				<% if current_user.admin? or current_user.person_id==@person.id %>
					<%= link_to edit_person_path(@person), data: {"turbo-frame": "modal" } do %>
						<%= render "shared/edit" %>
					<% end %>
				<% end %>
			</td>
		</tr>
	</table>
<% end %>
