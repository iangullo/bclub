<%- if controller_name != 'sessions' %>
  <%= link_to "Entrar", new_session_path(resource_name), class: 'hover:text-blue-900' %><br />
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¿Contraseña Olvidada?", new_password_path(resource_name), class: 'hover:text-blue-900'  %><br />
<% end %>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "¿No has recibido e-mail de confirmación?", new_confirmation_path(resource_name), class: 'hover:text-blue-900'  %><br />
<% end %>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "¿No has recibido instrucciones de desbloqueo?", new_unlock_path(resource_name), class: 'hover:text-blue-900'  %><br />
<% end %>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Entrar con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: 'hover:text-blue-900'  %><br />
  <% end %>
<% end %>
