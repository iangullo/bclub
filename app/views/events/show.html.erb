<% if @event.train? %>
	<table>
		<tr><td><%= render FieldsComponent.new(fields: @title) %></td></tr>
		<tr><td><%= render FieldsComponent.new(fields: @fields) %></td></tr>
		<tr>
			<td>
			<%= render SubmitComponent.new(submit: (current_user.admin? or @event.team.has_coach(current_user.person.coach_id)) ? edit_event_path(season_id: params[:season_id]) : nil, close_return: team_path(@event.team)) %>
			</td>
		</tr>
	</table>
<% else %>
	<%= render ModalComponent.new do %>
 		<%= render FieldsComponent.new(fields: @title) %>
		<%= render FieldsComponent.new(fields: @fields) %>
 		<%= render SubmitComponent.new(submit: (current_user.admin? or @event.team.has_coach(current_user.person.coach_id)) ? edit_event_path(season_id: params[:season_id]) : nil) %>
	<% end %>
<% end %>
