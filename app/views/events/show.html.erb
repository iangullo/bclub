<% if @event.train? %>
	<%= render FieldsComponent.new(fields: @header_fields) %>
	<%= render "view_session" %>
<% else %>
	<%= render "shared/modal", simple: true, edit: (current_user.admin? or @event.team.has_coach(current_user.coach_id)) ? edit_event_path(season_id: params[:season_id]) : nil do %>
		<%= render FieldsComponent.new(fields: @header_fields) %>
		<% if @event.match? %>
      <%= render "view_match" %>
		<% end %>
	<% end %>
<% end %>
