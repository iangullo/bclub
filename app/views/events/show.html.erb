<% unless @event.rest? %>
	<table>
		<tr><td><%= render FieldsComponent.new(fields: @title) %></td></tr>
		<tr><td><%= render FieldsComponent.new(fields: @fields) %></td></tr>
		<tr><td><%= render SubmitComponent.new(close: "back", close_return: params[:retlnk] ? params[:retlnk] : team_path(@event.team), submit: (current_user.admin? or @event.team.has_coach(current_user.person.coach_id)) ? edit_event_path(season_id: params[:season_id]) : nil) %></td></tr>
	</table>
<% else %>
	<%= render ModalComponent.new do %>
 		<%= render FieldsComponent.new(fields: @title) %>
		<%= render FieldsComponent.new(fields: @fields) if @fields %>
 		<%= render SubmitComponent.new(submit: (current_user.admin? or @event.team.has_coach(current_user.person.coach_id)) ? edit_event_path(season_id: params[:season_id]) : nil, frame: "modal") %>
	<% end %>
<% end %>
