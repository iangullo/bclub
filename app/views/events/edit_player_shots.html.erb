<%= render ModalComponent.new do %>
	<%= form_for @event, data: {turbo_frame: "_top"} do |form| %>
		<%= render @title %>
		<%= form.fields_for :stats, Stat.new do |ff| %>
			<% @fields.form = ff %>
			<%= render @fields %>
		<% end %>
		<%= form.hidden_field :player_id, value: (@player ? @player.id : current_user.u_playerid) %>
		<%= render @submit %>
	<% end %>
<% end %>
