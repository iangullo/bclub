<%= form_with model: event, authenticity_token: true, data: { title: title, turbo_frame: "_top" } do |form| %>
  <%= render FieldsComponent.new(fields: @header, form: form) %>
  <br>
  <div id="edit-event-data">
    <% if event.train? %>
      <%= render 'edit_session', form: form, title: title %>
    <% end %>
  </div>
  <%= form.hidden_field :season_id, value: @season.id if @event.team.id==0 %>
  <%= form.hidden_field :team_id %>
  <%= form.hidden_field :kind %>
  <%= render "shared/modal_bottom", close_return: (event.persisted? ? event_path : events_path), save: true %>
<% end %>
