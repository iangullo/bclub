<% if event.display? %>
  <tr class="align-top hover:text-white hover:bg-blue-700">
    <td align="center" class="border px py"><%= link_to event.date_string, event, data: { "turbo-frame": "modal" } %></td>
    <td align="center" class="border px py"><%= link_to event.time_string, event, data: { "turbo-frame": "modal" } %></td>
    <% unless short %>
      <td align="left" class="border px py"><%= link_to event.team_id > 0 ? event.team.to_s : "Todos", event, data: { "turbo-frame": "modal" } %></td>
    <% end %>
    <td align="left" class="border px py"><%= link_to event.to_s, event, data: { "turbo-frame": "modal" } %></td>
    <% if current_user.admin? or (event.team_id>0 and event.team.has_coach(current_user.person.coach_id)) %>
      <td class="align-center">
        <%= link_to event, method: :delete, data: { confirm: "Â¿Borrar '#{event.to_s(true)}'?" } do %>
          <%= render "shared/delete" %>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
