<% if event.display? %>
  <% short = local_assigns.fetch(:short, nil) %>
  <tr class="align-top hover:text-white hover:bg-blue-700">
    <td align="center" class="border px py"><%= link_to event.date_string, event, data: {turbo_frame: event.train? ? event.id : "modal"} %></td>
    <td align="center" class="border px py"><%= link_to event.time_string, event, data: {turbo_frame: event.train? ? event.id : "modal"} %></td>
    <% unless short %>
      <td align="left" class="border px py"><%= link_to event.team_id > 0 ? event.team.to_s : t(:l_all), event, data: {turbo_frame:  event.train? ? event.id : "modal"} %></td>
    <% end %>
    <td align="left" class="border px py"><%= link_to event.to_s, event, data: {turbo_frame:  event.train? ? event.id : "modal"} %></td>
    <% if current_user.admin? or (event.team_id>0 and event.team.has_coach(current_user.person.coach_id)) %>
    <td class="hover:bg-white align-center">
        <%= link_to event, method: :delete, data: {confirm: t(:q_del) + "'#{event.to_s(true)}'?"} do %>
          <%= render "shared/delete" %>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
