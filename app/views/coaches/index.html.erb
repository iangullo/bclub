<div id="coaches-index">
	<div id="coaches-header">
		<table>
			<th class="inline-flex items-center justify-center p-2 rounded-md text-yellow-600">
				<%= image_tag "coach.png", size: "50x50" %>Entrenadores&nbsp;
				<div id="search-people" class="inline-flex rounded border">
					<%= form_with(url: '/coaches', method: 'get', local: true) do %>
						<%= text_field_tag :search, (params[:search] ? params[:search] : ""), size: 16, class: "text-gray-700 rounded border shadow-inner" %>
						<%= image_submit_tag "search.svg", height: 25, class: "search_button align-middle", alt: "Buscar" %>
					<% end %>
				</div>
			</th>
		</table>
	</div>

	<div id="coaches-grid">
		<table class="table-auto">
			<thead>
				<tr>
					<th class="bg-indigo-900 text-gray-300 align-center border px">Nombre</th>
					<th class="bg-indigo-900 text-gray-300 align-center border px">Edad</th>
					<th align="center" class="bg-indigo-900 text-gray-300 align-center border px">Act.</th>
					<th>
						<%= link_to new_coach_path, data: {"turbo-frame": "modal" } do %>
							<%= render "shared/add" %>
						<% end %>
					</th>
				</tr>
			</thead>

			<tbody>
				<% @coaches.each do |coach| %>
					<tr>
						<td class="border px py hover:text-white hover:bg-blue-700"><%= link_to coach.to_s, coach, data: {"turbo-frame": "modal" } %></td>
						<td align="center" class="border px py"><%= coach.person.age %></td>
						<td align="center" class="border px py"><%= coach.active ? image_tag("Yes.svg", :size => "30x25") : image_tag("No.svg", :size => "30x25") %></td>
						<td>
							<%= link_to coach, method: :delete, data: { confirm: "Â¿Borrar '#{coach.to_s}'?" } do %>
								<%= render "shared/delete" %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div id="import-export">
		<table>
			<tr>
<!-- COMMENTING OUT EXPORT TILL WE HAVE RBAC
				<td>
					<div class="rounded-lg border-4 border-green-800 hover:bg-green-200 mb-3">
						< %= link_to coaches_path(format: :xlsx) do %>
							< %= image_tag "export.svg", class: "align-top max-h-7 min-h-5" %>
						< % end %>
					</div>
				</td>
			</tr><tr>
-->
				<td><%= image_tag "import.svg", class: "align-top max-h-7 min-h-5" %></td>
				<td>
					<%= form_with url: import_coaches_path, local: true do |form| %>
						<%= form.file_field :file %>
						<%= render "shared/save" %>
					<% end %>
				</td>
			</tr>
		</table>
	</div>
</div>
