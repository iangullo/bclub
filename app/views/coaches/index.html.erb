<div id="coaches-index">
	<div id="coaches-header">
		<table>
			<th class="inline-flex items-center justify-center p-2 rounded-md text-yellow-600">
				<%= image_tag "coach.png", size: "50x50" %>Entrenadores&nbsp;
				<div id="search-people" class="text-gray-600">
					<%= form_with(url: '/coaches', method: 'get', local: true) do %>
						<%= text_field_tag(:search) %>
						<%= image_submit_tag "search.png", width: 25, height: 25, class: "search_button align-middle", alt: "Buscar" %>
					<% end %>
				</div>
			</th>
		</table>
	</div>

	<div id="coaches-grid">
		<table class="table-auto">
			<thead>
				<tr>
					<th class="bg-indigo-900 text-gray-300 align-center">Nombre</th>
					<th class="bg-indigo-900 text-gray-300 align-center">Edad</th>
					<th align="center" class="bg-indigo-900 text-gray-300 align-center">Act.</th>
					<th>
						<%= link_to new_coach_path, data: {"turbo-frame": "modal" } do %>
							<%= image_tag "plus.png", size: "25x25", alt: "Crear" %>
						<% end %>
					</th>
				</tr>
			</thead>

			<tbody>
				<% @coaches.each do |coach| %>
					<tr>
						<td><%= link_to coach.to_s, coach, data: {"turbo-frame": "modal" }, class: "hover:text-blue-700" %></td>
						<td><%= coach.person.age %></td>
						<td style="text-align:center"><%= coach.active ? image_tag("Yes.png", :size => "30x25") : image_tag("No.png", :size => "30x25") %></td>
						<td>
							<%= link_to coach, method: :destroy, data: { confirm: '¿Borrar #{coach.to_s}?' } do %>
								<%= image_tag "delete.png", size: "25x25" %>
							<% end %>
						</td>
	<!--					<td>< %= link_to 'Borrar', coach, method: :destroy, data: { confirm: '¿Borrar #{coach.to_s}?' } %></td>
		-->
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
