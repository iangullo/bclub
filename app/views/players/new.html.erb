<h1>Nuevo Jugador</h1>

<%= form_for @player, remote: true do |form| %>
	<table><%= form.fields_for :person do |f| %>
		<tr>
			<td rowspan="3" colspan="1" align="center">
				<%= image_tag("player.png", :size => "100x100") %>
			</td>
			<td><%= f.label :name %></td>
			<td><%= f.text_field :name %></td>
		</tr><tr>
			<td><%= f.label :surname %></td>
			<td><%= f.text_field :surname %></td>
		</tr><tr>
	</table><% end %>
	<div class="actions">
		<%= form.submit "Crear"%>
	</div>
	<% end %>

<%= link_to 'Volver', players_path %>
