<%= render "shared/modal" do %>
	<table>
		<tr>
			<td rowspan="3" align="center">
				<%= image_tag(@player.picture, :size => "100x100") %>
			</td>
			<td><%= @player.person.name %></td>
		</tr><tr>
			<td><%= @player.person.surname %></td>
		</tr><tr>
			<td><%= @player.person.birthday %></td>
		</tr><tr>
			<td align="center"><%= @player.person.dni %></td>
			<td># <%= @player.number %>&nbsp;-&nbsp;<%= @player.active ? "Activo" : "Inactivo" %></td>
			<td align="right">
				<% if current_user.admin? or current_user.is_coach? or current_user.person.player_id==@player.id %>
					<%= link_to edit_player_path(@player), data: {"turbo-frame": "modal" } do %>
						<%= render "shared/edit" %>
					<% end %>
				<% end %>
			</td>
		</tr>
	</table>
<% end %>
