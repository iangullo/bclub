<div id="players-header">
  <table>
    <tr>
      <th rowspan="2">
        <%= image_tag "player.svg", size: "50x50" %>
      </th>
      <th align="left" class="align-top text-yellow-600"><%= label %></th>
    </tr><tr>
      <th align="left">
        <div id="search-players" class="inline-flex rounded border">
          <%= form_with(url: '/players', method: 'get', local: true) do %>
            <%= text_field_tag :search, (params[:search] ? params[:search] : ""), size: 16, class: "text-gray-700 rounded border shadow-inner" %>
            <%= image_submit_tag "search.svg", height: 25, class: "search_button align-middle", alt: t(:m_search) %>
          <% end %>
        </div>
      </th>
    </tr>
  </table>
</div>
