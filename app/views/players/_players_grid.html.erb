<div id="players-grid">
  <table class="table-auto">
    <thead>
      <tr>
        <th class="bg-indigo-900 text-gray-300 align-center border px py"><%= t(:a_num) %></th>
        <th class="bg-indigo-900 text-gray-300 align-center border px py"><%= t(:h_name) %></th>
        <th align="center" class="bg-indigo-900 text-gray-300 align-center border px py"><%= t(:h_age) %></th>
        <th align="center" class="bg-indigo-900 text-gray-300 align-center border px py"><%= t(:a_active) %></th>
        <% if current_user.admin? or current_user.is_coach? %>
          <th align="center">
            <%= link_to new_player_path, data: {turbo_frame: "modal"} do %>
              <%= render "shared/add" %>
            <% end %>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @players.each do |player| %>
        <%= render "player_row", player: player %>
      <% end %>
    </tbody>
  </table>
</div>
