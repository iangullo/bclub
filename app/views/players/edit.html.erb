<%= render "shared/modal" do %>
  <%= form_for @player, authenticity_token: true, data: { turbo_frame: "_top" } do |form| %>
  	<%= form.fields_for :person do |f| %>
  		<%= render FieldsComponent.new(fields: @title_fields, form: f) %>
  		<%= render FieldsComponent.new(fields: @player_fields_1, form: form) %>
  		<%= render FieldsComponent.new(fields: @player_fields_2, form: form) %>
  		<%= render FieldsComponent.new(fields: @person_fields, form: f) %>
  	<% end %>
  	<%= render "shared/modal_bottom", save: true %>
  <% end %>
<% end %>
