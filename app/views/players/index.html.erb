<div id="player-index">
	<div id="player-header">
		<table>
			<tr>
				<th class="inline-flex items-center justify-center p-2 rounded-md text-yellow-600">
					<%= image_tag "player.png", size: "50x50" %>&nbsp;Jugadores&nbsp;
					<div id="search-people" class="inline-flex rounded border">
						<%= form_with(url: '/players', method: 'get', local: true) do %>
							<%= text_field_tag :search, (params[:search] ? params[:search] : ""), size: 16, class: "text-gray-700 rounded border shadow-inner" %>
							<%= image_submit_tag "search.svg", height: 25, class: "search_button align-middle", alt: "Buscar" %>
						<% end %>
					</div>
				</th>
			</tr>
		</table>
	</div>

	<div id="players-grid">
		<table class="table-auto">
			<thead>
				<tr>
					<th class="bg-indigo-900 text-gray-300 align-center border px py">N&uacute;m.</th>
					<th class="bg-indigo-900 text-gray-300 align-center border px py">Nombre</th>
					<th align="center" class="bg-indigo-900 text-gray-300 align-center border px py">Edad</th>
					<th align="center" class="bg-indigo-900 text-gray-300 align-center border px py">Activ.</th>
					<th align="center">
						<%= link_to new_player_path, data: {"turbo-frame": "modal" } do %>
							<%= render "shared/add" %>
						<% end %>
					</th>
				</tr>
			</thead>

			<tbody>
				<% @players.each do |player| %>
					<tr>
						<td align="center" class="border px py"><%= player.number %></td>
						<td class="border px py hover:text-white hover:bg-blue-700"><%= link_to player.to_s, player, data: {"turbo-frame": "modal" } %></td>
						<td align="center" class="border px py"><%= player.person.age %></td>
						<td align="center" class="border px py"><%= player.active ? image_tag("Yes.svg", :size => "30x25") : image_tag("No.svg", :size => "30x25") %></td>
						<td>
							<%= link_to player, method: :delete, data: { confirm: "Â¿Borrar '#{player.to_s}'?" } do %>
								<%= render "shared/delete" %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br>

	<div id="import-export">
		<table>
			<tr>
				<td>
					<div class="rounded-lg border-4 border-green-800 hover:bg-green-200 mb-3">
						<%= link_to coaches_path(format: :xlsx) do %>
							<%= image_tag "export.svg", width: 125 %>
						<% end %>
					</div>
				</td>
			</tr><tr>
				<td><%= image_tag "import.svg", width: 125, class: "align-top" %></td>
				<td>
					<%= form_with url: import_coaches_path, local: true do |form| %>
						<%= form.file_field :file %>
						<%= render "shared/save" %>
					<% end %>
				</td>
			</tr>
		</table>
	</div>
</div>
