<%= form_with(model: training_slot) do |form| %>
  <% if training_slot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(training_slot.errors.count, "error") %> prohibited this training_slot from being saved:</h2>

      <ul>
        <% training_slot.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table>
  	<tr>
  		<td rowspan="3" align="center">
  			<%= image_tag("team.png", :size => "100x100") %>
  		</td>
  		<td align="right"><strong><%= form.label "Temporada" %></strong></td>
  		<td colspan="3"><%= form.collection_select :season_id, Season.real.order(name: :desc), :id, :name %></td>
  	</tr><tr>
  		<td align="right"><strong><%= form.label "Pista" %></strong></td>
  		<td colspan="3"><%= form.collection_select :location_id, Location.practice.order(name: :asc), :id, :name %></td>
  	</tr><tr>
  		<td align="right"><strong><%= form.label "Día" %></strong></td>
  		<td colspan="3"><%= form.select :wday, @weekdays %></td>
  	</tr><tr>
  		<td><%= form.collection_select :team_id, Team.for_season(form.object.season_id), :id, :to_s %></td>
  		<td align="right"><strong>Hora</strong></td>
  		<td><%= form.number_field :hour, value: 16, in: 16..21, size: 3 %><%= form.number_field :min, in: 0..45, step: 15, size: 3, class: "rounded border shadow-inner" %></td>
  		<td><strong>Duración</strong></td>
  		<td><%= form.number_field :duration, in: 60..120, step: 30, size: 4, class: "rounded border shadow-inner" %></td>
  	<tr>
  </table>
  <%= render "shared/save" %>
<% end %>
