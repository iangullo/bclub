<% colspan = local_assigns.fetch(:colspan, nil) %>
<% task_id = local_assigns.fetch(:task_id, nil) %>
<td align="left" colspan="<%= colspan ? colspan : 1 %>">
  <div id="text-search-box" class="inline-flex align-middle rounded border">
    <%= form_with(url: search_in, method: 'get', local: true) do |f| %>
      <%= text_field_tag :search, (params[:search] ? params[:search] : ""), size: 16, class: "text-gray-700 rounded border shadow-inner" %>
      <%= f.hidden_field :task_id, value: task_id if task_id %>
      <%= image_submit_tag "search.svg", height: 25, class: "search_button align-middle", alt: t(:m_search) %>
    <% end %>
  </div>
</td>
