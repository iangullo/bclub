<div class="nested-form-wrapper" data-new-record="<%= form.object.new_record? %>">
	<% form.hidden_field :id %>
	<tr>
		<td align="right" class="border px-1 py-1"><%= form.object.order.to_s  %></td>
		<td class="border px-1 py-1"><%= form.object.drill ? form.object.drill.name : "buscar ejercicio" %></td>
		<td align="center" class="border px-1 py-1"><%= form.text_field :duration, size: 1, class: "text-xs text-right" %></td>
		<td><button type="button" data-action="nested-form#remove"><%= image_tag "minus.png", size: "20x20" %></button></td>
	</tr>
	<%= form.hidden_field :_destroy %>
</div>
