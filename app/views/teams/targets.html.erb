<%= render "shared/modal" do %>
	<div id="show-targets-header">
		<table>
			<tr>
				<th rowspan="2" class="items-center justify-center">
					<%= image_tag("target.svg", size: "50x50") %>
				</th>
				<th align="left" class="align-top rounded-md text-yellow-600">
					<%= @team.to_s %>
				</th>
			</tr><tr>
				<th align="left"><%= @team.season.name %></th>
			</tr><tr>
				<td></td><th align="left">Objetivos</th>
			</tr>
		</table>
	</div>
	<div id="show-targets-data">
		<table>
			<tr>
				<th colspan="2" class="bg-indigo-900 text-gray-300 border px py" align="center">Defensa</th>
			</tr><tr>
				<td colspan="2" class="border px py align-top">
					<%= render "print_targets", targets: @t_d_gen %>
				</td>
			</tr><tr>
				<th class="bg-indigo-900 text-gray-300 border px py" align="left">Tec. Individual</th>
				<th class="bg-indigo-900 text-gray-300 border px py" align="center">T&aacute;c. Colectiva</th>
			</tr><tr>
				<td class="border px py align-top">
					<%= render "print_targets", targets: @t_d_ind %>
				</td>
				<td class="border px py align-top">
					<%= render "print_targets", targets: @t_d_col %>
				</td>
			</tr><tr>
				<th colspan="2" class="border px py" align="center"><br></th>
			</tr><tr>
				<th colspan="2" class="bg-indigo-900 text-gray-300 border px py" align="center">Ataque</th>
			</tr><tr>
				<td colspan="2" class="border px py align-top">
					<%= render "print_targets", targets: @t_o_gen %>
				</td>
			</tr><tr>
				<th class="bg-indigo-900 text-gray-300 border px py" align="left">Tec. Individual</th>
				<th class="bg-indigo-900 text-gray-300 border px py" align="center">T&aacute;c. Colectiva</th>
			</tr><tr>
				<td class="border px py align-top">
					<%= render "print_targets", targets: @t_o_ind %>
				</td>
				<td class="border px py align-top">
					<%= render "print_targets", targets: @t_o_col %>
				</td>
			</tr>
		</table>
	</div>
	<div align="right">
		<% if current_user.admin? or @team.has_coach(current_user.person.coach_id) %>
			<%= link_to edit_targets_team_path, data: { "turbo-frame": "modal" } do %>
				<%= render "shared/edit" %>
			<% end %>
		<% end %>
	</div>
<% end %>
