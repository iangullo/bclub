<%= render "shared/modal" do %>
  <%= form_with model: @team, remote: true do |form| %>
    <% if @team.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(team.errors.count, "error") %> impiden guardar este equipo:</h2>

        <ul>
          <% @team.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <table>
    	<tr>
    		<td rowspan="3" colspan="2" align="center">
    			<%= image_tag("team.png", :size => "100x100") %>
    		</td>
    	</tr><tr>
    		<td><strong><%= form.label "Categoría" %></strong></td>
    		<td><%= form.collection_select :category_id, Category.real, :id, :to_s %></td>
    	</tr><tr>
    		<td><strong><%= form.label "Competición" %></strong></td>
    		<td><%= form.collection_select :division_id, Division.real, :id, :name %></td>
    	</tr><tr>
    		<td><strong><%= form.label "Nombre" %></strong></td>
    		<td><%= form.text_field :name, size: 12, class: "rounded border shadow-inner" %></td>
    		<td><strong><%= form.label "Temporada" %></strong></td>
    		<td><%= form.collection_select :season_id, Season.real, :id, :name %></td>
    	</tr><tr>
    		<td colspan="2">
    			<table>
            <tr><td colspan="2"><strong>Entrenadores:</strong></td></tr>
            <tr><td></td>
      				<td><div id=”team-coaches”>
      					<%= form.collection_check_boxes :coach_ids, Coach.active, :id, :to_s do |coach| %>
      						<div class="collection-check-box">
      							<%= coach.check_box %>
      							<%= coach.label %>
      						</div>
      					<% end %>
              </div></td>
      			</tr>
    			</table>
    		</td>
        <td class="align-top text-right"><strong><%= form.label "Pista:" %></strong></td>
      	<td class="align-top"><%= form.collection_select :homecourt_id, Location.home, :id, :name %></td>
    	</tr>
    </table>
    <%= render "shared/save" %>
  <% end %>
<% end %>
