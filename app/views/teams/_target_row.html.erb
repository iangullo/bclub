<% f_cls = "rounded shadow-inner border-gray-200 bg-gray-50 focus:ring-blue-700 focus:border-blue-700 py-0" %>
<%= form.number_field :priority, value: form.object.priority, min: 1, max: 5, size: 2, class: f_cls + " px-0 text-right" %>
<%= form.fields_for :target do |f| %>
	<%= f.text_field :concept, placeholder: t("target.default"), size: 20, class: f_cls +" px-1" %>
	<%= f.hidden_field :focus %>
	<%= f.hidden_field :aspect %>
<% end %>