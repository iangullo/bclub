<%= form_with model: team, remote: true do |form| %>
	<div id="team-form">
		<table>
			<div id="team-form-header">
				<tr>
					<th rowspan="3" class="items-center justify-center">
						<%= image_tag("team.svg", size: "50x50") %>
					</th>
				</tr><tr>
					<td align="left" class="align-top"><%= form.text_field :name, size: 12, class: "rounded border shadow-inner" %></td>
				</tr><tr>
					<% if current_user.admin? %>
						<td><%= form.collection_select :season_id, Season.real.order(name: :desc), :id, :name %></td>
					<% else %>
						<th align="left"><%= form.object.season.name %></th>
					<% end %>
				</tr>
			</div>
			<div id="team-form-data">
				<tr>
					<td align="right"><strong><%= form.label "Cat:" %></strong></td>
					<td><%= form.collection_select :category_id, Category.real, :id, :to_s %></td>
				</tr><tr>
					<td align="right"><strong><%= form.label "Comp:" %></strong></td>
					<td><%= form.collection_select :division_id, Division.real, :id, :name %></td>
				</tr><tr>
					<td align="right"><strong><%= form.label "Local:" %></strong></td>
					<td><%= form.collection_select :homecourt_id, Location.home, :id, :name %></td>
				</tr>
			</div>
		</table>
		<%= render "shared/save" %>
	</div>
<% end %>
