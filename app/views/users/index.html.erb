<div id="users-index">
	<%= render FieldsComponent.new(fields: @fields) %>
	<div id="users-grid">
		<table class="table-auto">
			<thead>
				<tr>
					<th class="bg-indigo-900 text-gray-300 align-center border px py"><%= t(:h_name) %></th>
					<th align="center" class="bg-indigo-900 text-gray-300 align-center border px py"><%= t(:a_player) %></th>
					<th align="center" class="bg-indigo-900 text-gray-300 align-center border px py"><%= t(:a_coach) %></th>
					<th align="center" class="bg-indigo-900 text-gray-300 align-center border px py"><%= t(:a_admin) %></th>
					<th align="center">
						<%= link_to new_user_path, data: {turbo_frame: "modal" } do %>
							<%= render "shared/add" %>
						<% end %>
					</th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td class="border px py hover:text-white hover:bg-blue-700"><%= link_to user.s_name, user, data: {turbo_frame: "modal" } %></td>
						<td align="center" class="border px py"><%= user.is_player? ? image_tag("Yes.svg", :size => "30x25") : image_tag("No.svg", :size => "30x25") %></td>
						<td align="center" class="border px py"><%= user.is_coach? ? image_tag("Yes.svg", :size => "30x25") : image_tag("No.svg", :size => "30x25") %></td>
						<td align="center" class="border px py"><%= user.admin? ? image_tag("Yes.svg", :size => "30x25") : image_tag("No.svg", :size => "30x25") %></td>
						<td>
							<%= link_to user, method: :delete, data: {confirm: t(:q_del) + "'#{user.to_s}'?"} do %>
								<%= render "shared/delete" %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
