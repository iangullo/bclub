<%= render ModalComponent.new do %>
  <%= form_for @user, authenticity_token: true, data: {turbo_frame: "_top"} do |form| %>
  	<%= form.fields_for :person do |f| %>
      <%= render FieldsComponent.new(fields: @title, form: f) %>
      <%= render FieldsComponent.new(fields: @role, form: form) %>
      <%= render FieldsComponent.new(fields: @avatar, form: form) %>
      <%= render FieldsComponent.new(fields: @person_fields, form: f) %>
      <%= render FieldsComponent.new(fields: @pass_fields, form: form) %>
  	<% end %>
    <%= render SubmitComponent.new(submit: "save") %>
  <% end %>
<% end %>
