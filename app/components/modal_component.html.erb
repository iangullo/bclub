<%= turbo_frame_tag "modal" do %>
  <div data-controller="extended-modal"
    data-modal-allow-background-close="true">

    <!-- Modal Container -->
    <div data-extended-modal-target="container"
      data-action="turbo:submit-end->extended-modal#handleSuccess click->modal#closeBackground keyup@window->modal#closeWithKeyboard"
      class="animated fadeIn fixed z-10 inset-0 overflow-auto bg-gray-500 bg-opacity-75 flex items-center justify-center">
      <!-- Modal Inner Container -->
      <div data-extended-modal-target="body" class="flex relative mb-auto inset-y-16 object-cover overflow-auto shadow">
        <!-- Modal Card -->
        <div class="m-1 bg-white rounded-lg shadow">
          <div class="p-3">
            <%= turbo_frame_tag "modal-body" do %>
              <%= content %>
              <% if @close %>
                <div class="flow-root mt-3">
                  <div class="float-left">
                    <%= render ButtonComponent.new(button: @close) %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
